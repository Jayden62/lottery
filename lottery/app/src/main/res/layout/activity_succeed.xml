<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="@dimen/normalPadding"
        android:layout_height="match_parent"
        tools:context=".screens.succeed.SucceedActivity">

    <ImageView
            android:id="@+id/mImageViewSucceed"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/photo_succeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mTextViewCongrats"
            android:text="Đặt hẹn thành công, vui lòng mang theo mã qr code để check in tại phòng mạch. Cám ơn khách hàng đã sử dụng dịch vụ của chúng tôi."
            android:layout_marginTop="@dimen/normalMargin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mImageViewSucceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/mImageViewQrCode"
            android:src="@drawable/photo_qr_code"
            android:layout_marginTop="@dimen/normalMargin"
            app:layout_constraintTop_toBottomOf="@+id/mTextViewCongrats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

    <TextView
            android:id="@+id/mTextViewNote"
            android:textColor="@android:color/black"
            android:text="* Note : "
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/normalMargin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Bật tính năng báo hẹn tại trang cá nhân."
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/normalMargin"
            android:layout_marginTop="@dimen/normalMargin"
            app:layout_constraintStart_toEndOf="@+id/mTextViewNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>