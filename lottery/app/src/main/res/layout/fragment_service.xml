<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".screens.fragments.service.FragmentService">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/mConstrainLayoutMenu"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="4dp"
            android:layout_height="60dp">

        <ImageView
                android:clickable="true"
                android:background="@drawable/bg_cart_selector"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/normalMargin"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/smallMargin"
                android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>

    <View
            android:id="@+id/mViewLine"
            app:layout_constraintTop_toBottomOf="@+id/mConstrainLayoutMenu"
            android:background="@color/grayColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/mViewLine"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/normalMargin"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>