<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".screens.fragments.profile.FragmentProfile">

    <ImageView
            android:id="@+id/mImageView"
            android:layout_marginStart="@dimen/normalMargin"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/normalMargin"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_account_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mTextViewName"
            android:text="Họ tên : "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mImageView"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/normalMargin"
            android:layout_marginStart="@dimen/normalMargin"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/mEditTextName"
            android:text="Minh Dâm"
            android:enabled="false"
            android:singleLine="true"
            android:maxLines="1"
            android:backgroundTint="@color/grayColor"
            app:layout_constraintStart_toEndOf="@+id/mTextViewName"
            app:layout_constraintTop_toBottomOf="@+id/mImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normalMargin"
            app:layout_constraintEnd_toStartOf="@+id/mImageViewEdit"
            android:layout_marginEnd="@dimen/smallMargin"/>

    <ImageView
            android:layout_marginEnd="@dimen/normalMargin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/normalMargin"
            app:layout_constraintTop_toBottomOf="@+id/mImageView"
            android:background="@drawable/bg_edit_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mImageViewEdit"/>

    <Button
            android:id="@+id/mButtonSave"
            android:text="Save"
            android:enabled="false"
            android:layout_marginStart="@dimen/normalMargin"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_base_button_selector"
            android:layout_width="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/double_normalMargin"
            android:layout_marginBottom="@dimen/normalMargin"
            android:layout_marginEnd="@dimen/normalMargin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="30dp"/>

</android.support.constraint.ConstraintLayout>