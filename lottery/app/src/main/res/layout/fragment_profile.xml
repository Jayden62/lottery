<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".screens.fragments.profile.FragmentProfile">

        <ImageView
                android:id="@+id/mImageView"
                android:layout_marginStart="@dimen/normalMargin"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/normalMargin"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/ic_account_circle_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/mButtonSave"
                android:text="Save"
                android:enabled="false"
                android:layout_marginStart="@dimen/normalMargin"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_base_button_selector"
                android:layout_width="80dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/double_normalMargin"
                android:layout_marginBottom="@dimen/normalMargin"
                android:layout_marginEnd="@dimen/normalMargin"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="30dp"/>

        <TextView
                android:id="@+id/mTextViewName"
                android:text="Name: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mImageView"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/normalMargin"
                android:layout_marginStart="@dimen/normalMargin"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/mEditTextName"
                android:enabled="false"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="14sp"
                android:backgroundTint="@color/grayColor"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewName"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normalMargin"
                app:layout_constraintEnd_toStartOf="@+id/mImageViewName"
                android:layout_marginEnd="@dimen/normalMargin"/>

        <ImageView
                android:layout_marginEnd="@dimen/normalMargin"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/normalMargin"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewName"
                android:background="@drawable/bg_edit_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mImageViewName"/>

        <TextView
                android:id="@+id/mTextViewPhone"
                android:text="Phone number : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mEditTextName"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/normalMargin"
                android:layout_marginStart="@dimen/normalMargin"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/mEditTextPhone"
                android:enabled="false"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="14sp"
                android:backgroundTint="@color/grayColor"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewPhone"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normalMargin"
                android:layout_marginEnd="@dimen/normalMargin"/>

        <TextView
                android:id="@+id/mTextViewSex"
                android:text="Sex : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mEditTextPhone"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/normalMargin"
                android:layout_marginStart="@dimen/normalMargin"
                android:layout_height="wrap_content"/>


        <EditText
                android:id="@+id/mEditTextSex"
                android:enabled="false"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="14sp"
                android:backgroundTint="@color/grayColor"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewSex"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normalMargin"
                android:layout_marginEnd="@dimen/normalMargin"/>


        <TextView
                android:id="@+id/mTextViewAddress"
                android:text="Address : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mEditTextSex"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/normalMargin"
                android:layout_marginStart="@dimen/normalMargin"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/mEditTextAddress"
                android:enabled="false"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="14sp"
                android:backgroundTint="@color/grayColor"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewAddress"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normalMargin"
                app:layout_constraintEnd_toStartOf="@+id/mImageViewAddress"
                android:layout_marginEnd="@dimen/normalMargin"/>

        <ImageView
                android:layout_marginEnd="@dimen/normalMargin"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/normalMargin"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewAddress"
                android:background="@drawable/bg_edit_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mImageViewAddress"/>

        <TextView
                android:id="@+id/mTextViewChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normalMargin"
                android:clickable="true"
                android:drawableRight="@drawable/bg_change_password_selector"
                android:drawablePadding="@dimen/smallPadding"
                android:text="Change Password"
                android:textColor="@drawable/bg_forget_password_selector"
                android:textSize="@dimen/mediumSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mEditTextAddress" android:focusable="true"/>

        <View
                android:id="@+id/mViewLine"
                android:layout_marginTop="@dimen/normalMargin"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewChangePassword"
                android:background="@color/grayColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:id="@+id/mTextViewRecords"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/mViewLine"
                android:text="Records"
                android:layout_marginTop="@dimen/normalMargin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/normalMargin"
                android:layout_marginEnd="@dimen/normalMargin"
                android:id="@+id/mRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/normalMargin"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>